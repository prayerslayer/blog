---
layout: rss-feed
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ site.name }}</title>
		<description>{{ site.description }}</description>
		<link>{{ site.host }}</link>
		<ttl>60</ttl>
		<atom:link href="{{ site.host }}/feed.xml" rel="self" type="application/rss+xml" />
		<language>de-de</language>
		{% for post in site.posts limit:10 %}
			<item>
				<title>{{ post.title }}</title>
				<description>
					{% if post.youtube %}
						<a href="http://www.youtube.com/watch?v={{ post.youtube }}">Video</a>
					{% endif %}
					{{ post.content | xml_escape }}
				</description>

				{% if {{post.date | date: "%Z"}} == "W. Europe Daylight Time" %}
					{% assign tz = "+0200" %}
				{% else %}
					{% assign tz = "+0100" %}
				{% endif %}
				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S"}} {{ tz }}</pubDate>
				<link>{{ site.host }}{{ post.url }}</link>
				<guid isPermaLink="true">{{ site.host }}{{ post.url }}</guid>
				<source url="{{ site.host }}/feed.xml">Nikolaus Piccolotto</source>
			</item>
		{% endfor %}
	</channel>
</rss>