//Variables
line_height = 1.5em
font_color = black
bg_color = white
sans_family = "Source Sans Pro", sans-serif
mono_family = "Source Code Pro", monospace
quote_color = grey
dark_color = #6e1D16
light_color = #bb3126
almost_no_color = #330D0A
elem_minheight = 320px
elem_minwidth = 480px

//Styles on tags

html
  height: 100%

iframe
  width: inherit
  height: auto
  min-height: elem_minheight
  min-width: elem_minwidth

p object, p embed
  min-width: elem_minwidth
  min-height: elem_minheight
  width: 100%
  height: auto

article
  margin-top: 2*line_height
  margin-bottom: 2*line_height

blockquote
  border-left: 1px dashed quote_color
  margin-top: line_height
  margin-bottom: line_height
  margin-left: line_height
  color: quote_color

blockquote p
  margin-left: line_height

body
  height: 100%
  font-size: 20px
  font-family: sans_family
  font-weight: 300
  line-height: line_height
  color: font_color
  background-color: bg_color

a
  color: light_color

a:hover, a:visited
  color: dark_color

#header:hover
  color: dark_color
  cursor: pointer
  border-bottom: 3px solid dark_color  

footer
  min-height: 100px
  margin-top: 2*line_height
  background-color: almost_no_color
  color: bg_color
  position: relative
  clear: both

p + p
  margin-top: line_height

div.CodeRay, code
  display: inline
  font-family: mono_family
  font-size: 12px
  color: quote_color
  line-height: 18px

.line-numbers
  padding-right: line_height

p > code
  font-size: 18px

pre
  line-height: 18px
  font-size: 12px
  font-family: mono_family !important
  color: quote_color

ul, ol
  margin-top: line_height
  margin-bottom: line_height
  margin-left: line_height

li
  line-height: line_height

li + li
  margin-top: 0.5em

b, strong
  font-weight: bold

img
  max-width: 100%
  vertical-align: middle

//Styles on selectors

#map
  height: elem_minheight
  width: elem_minwidth
  border: 2px solid black

#map img
  max-width: inherit !important //tiles are skewed otherwise

.olControlAttribution
  display: none !important

.olButton
  background-color: font_color !important

.social
  min-width: 8px
  min-height: 8px
  max-width: 32px
  max-height: 32px
  float: none
  margin: 5px

.social-icons
  margin-top: 3*line_height

.navigation
  padding-bottom: 2*line_height

.paginate
  padding-top: 2*line_height

.page_number
  margin-left: line_height
  margin-right: line_height

div.content
  max-width: 800px

div.embed
  margin-top: line_height
  margin-bottom: line_height

div.content h1
  font-size: 24px
  line-height: 2*line_height

div.date
  color: quote_color

div.metadata
  padding-bottom: line_height

h2.title
  border-bottom: 1px solid font_color
  font-size: inherit
  line-height: line_height
  margin-bottom: line_height

h1#header
  font-size: 48pt
  line-height: line_height
  border-bottom: 3px solid black

div#top
  min-height: 100%